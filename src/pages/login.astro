---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <body class="bg-sky-100">
        <div class="flex items-center justify-center pt-52">
            <div
                class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-white dark:border-gray-700"
            >
                <a href="#">
                    <h5
                        class="mb-2 text-2xl font-bold tracking-tight text-gray-900"
                    >
                        Cuestionario
                    </h5>
                </a>
                <p class="mb-3 font-normal text-gray-700">
                    Uso de las redes sociales y la salud mental de los
                    estudiantes
                </p>
                <div class="flex justify-between">
                    <a
                        href="information"
                        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-500 rounded-lg hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-red-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800"
                    >
                        Informaci√≥n
                        <svg
                            class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 14 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                        </svg>
                    </a>

                    <a
                        href="/test.html"
                        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-500 rounded-lg hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-red-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800"
                    >
                        Realizar Test
                        <svg
                            class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 14 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </body>
</Layout>
